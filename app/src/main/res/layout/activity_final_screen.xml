<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalScreen"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#03A9F4">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You scored:"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="There will be 5 questions appearing soon."
        android:textAlignment="center"
        android:textColor="#160707"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:text="You will have to answer one question before going onto the next."
        android:textAlignment="center"
        android:textColor="#070303"
        android:textSize="20sp" />
</LinearLayout>